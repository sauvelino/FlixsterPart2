<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="Titlecolor">@color/colorPrimaryDark</item>
        <item name="Overviewcolor">#808080</item>
        <item name="Backgroundcolor">#fff</item>
        <item name="toolbarcolor">@color/colorPrimaryDark</item>
        <item name="Bordercolor">@color/colorPrimaryDark</item>
    </style>



    <!-- Base application Nighttheme. -->
    <style name="NightAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">#fff</item>
        <item name="Titlecolor">#fff</item>
        <item name="Overviewcolor">#fff</item>
        <item name="Backgroundcolor">#000</item>
        <item name="toolbarcolor">#fff</item>
        <item name="Bordercolor">#fff</item>

    </style>

</resources>
